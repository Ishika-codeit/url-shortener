<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated URLs</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            max-width: 900px;
            width: 95%;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .url-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }

        .url-table th,
        .url-table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .url-table th {
            background-color: #f4f4f4;
        }

        .url-table a {
            color: #007bff;
            text-decoration: none;
        }

        .url-table a:hover {
            text-decoration: underline;
        }

        .back-link {
            display: block;
            margin-top: 25px;
            text-align: center;
        }

        .back-link a {
            padding: 10px 18px;
            border-radius: 8px;
            background-color: #764ba2;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .back-link a:hover {
            background-color: #5a3d91;
        }

        @media (max-width: 600px) {
            .url-table th, .url-table td {
                font-size: 12px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>Generated URLs</h3>
        <table class="url-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Short ID</th>
                    <th>Redirect URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td>
                            <a href="<%= url.redirectURL %>" target="_blank">
                                <%= url.redirectURL %>
                            </a>
                        </td>
                        <td><%= url.history.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="back-link">
            <a href="/">Create New URL</a>
        </div>
    </div>
</body>
</html>
